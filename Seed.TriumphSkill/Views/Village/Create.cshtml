@model Seed.TriumphSkill.Models.Village

@{
    ViewBag.Title = "Create New Village";
}

@using (Html.BeginForm("Create", "Village", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="panel panel-default">
        <div class="panel-heading"><span class="glyphicon glyphicon-plus" aria-hidden="true" style="margin-right: 4px;"></span>Village</div>
        <div class="panel-body">
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Code, new { @class = "col-lg-2 control-label" })

                    <div class="col-lg-10">
                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @placeholder = "Code" })
                        @Html.ValidationMessageFor(m => m.Code)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-lg-2 control-label" })

                    <div class="col-lg-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Name" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Create New Village</button>
                        <button type="reset" class="btn btn-default">Reset Fields</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {

}