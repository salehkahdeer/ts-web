@model IEnumerable<Seed.TriumphSkill.Models.Menu>

@foreach (var menu in Model)
{
    if (menu.Children.Count == 0)
    {
    <li>@Html.ActionLink(menu.DisplayName, menu.Action, menu.Controller)</li>
    }
    else
    {
    <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">@menu.DisplayName <span class="caret"></span></a>
        <ul class="dropdown-menu">
            @foreach (var child in menu.Children)
            {
                <li>@Html.ActionLink(child.DisplayName, child.Action, child.Controller)</li>
            }
        </ul>
    </li>
    }
}